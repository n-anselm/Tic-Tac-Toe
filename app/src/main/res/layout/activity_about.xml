<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorGray"
        android:elevation="4dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/about_back_arrow"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="?attr/aboutBackArrow" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/about_app"
            android:textColor="?attr/textColor1"
            android:textSize="20sp" />

    </LinearLayout>

        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="?attr/colorGray">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        </FrameLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/textColor1"/>

        <TextView
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by Anselm Development"
            android:textSize="20sp"
            android:textColor="?attr/textColor2"/>



        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:textAllCaps="true"
            android:textColor="?attr/textColor1"
            android:layout_marginTop="64dp"
            android:textSize="18sp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sales@anselmdevelopment.com"
            android:textColor="?attr/textColor1"
            android:layout_marginTop="4dp"
            android:textSize="18sp"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="support@anselmdevelopment.com"
            android:textColor="?attr/textColor1"
            android:layout_marginTop="4dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Note: If you encounter any bugs or issues, or have any ideas, feel free to contact us and share your concerns. We welcome feedback."
            android:textSize="16sp"
            android:textColor="?attr/textColor2"/>

    </LinearLayout>

</LinearLayout>